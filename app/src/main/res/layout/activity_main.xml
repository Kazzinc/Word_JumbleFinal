<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/backgroundapp">

    <TextView
        android:id="@+id/WordJumble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="280dp"
        android:text="WORD
        JUMBLE"
        android:fontFamily="@font/lobster"
        android:textAlignment="center"
        android:textColor="#03f4fc"
        android:textSize="50dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.516" />

    <TextView
        android:layout_width="100dp"
        android:text="Word"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_height="30dp"
        android:background="@drawable/bginput"
        app:layout_constraintBottom_toTopOf="@+id/Word"
        app:layout_constraintStart_toStartOf="@+id/Word" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:text="Clue"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="20dp"
        android:background="@drawable/bginput"
        app:layout_constraintBottom_toTopOf="@+id/Clue"
        app:layout_constraintStart_toStartOf="@+id/Clue" />

    <EditText
        android:id="@+id/Word"
        android:textSize="25dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="75dp"
        app:layout_constraintEnd_toEndOf="@+id/WordJumble"
        app:layout_constraintStart_toStartOf="@+id/WordJumble"
        app:layout_constraintTop_toBottomOf="@+id/WordJumble"
        android:background="@drawable/bgwordclue"
        />

    <EditText
        android:id="@+id/Clue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="65dp"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="@+id/WordJumble"
        app:layout_constraintStart_toStartOf="@+id/WordJumble"
        app:layout_constraintTop_toBottomOf="@+id/Word"
        android:background="@drawable/bgwordclue"/>

    <Button
        android:id="@+id/start"
        android:layout_width="108dp"
        android:layout_height="53dp"
        android:layout_marginTop="65dp"
        android:background="@drawable/bgradius"
        android:text="Start"
        app:layout_constraintEnd_toEndOf="@+id/Clue"
        app:layout_constraintStart_toStartOf="@+id/Clue"
        app:layout_constraintTop_toBottomOf="@+id/Clue" />

    <ImageView
        android:id="@+id/yellowcrown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/WordJumble"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.833"
        app:srcCompat="@drawable/yellowcrown" />

    <ImageView
        android:id="@+id/starbtn"
        android:layout_width="123dp"
        android:layout_height="58dp"
        app:layout_constraintBottom_toBottomOf="@+id/start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/start"
        app:srcCompat="@drawable/startbtn" />


</androidx.constraintlayout.widget.ConstraintLayout>